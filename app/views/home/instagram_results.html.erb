<% require 'open-uri' %>
<p> <%= @brand %> </p>

<% html = "<p> Hi </p>" %>
<% @tags.each do |media_item| %>

    <% link = media_item.link %>

    <% image = media_item.images.standard_resolution.url %>

    <% html << "<img src=#{image} />"  %>

<% end %>

<%#= html %>
<p> <%#= @tags %> </p>

<% @tags.map do |p| %>
	<% puts p.images.standard_resolution.url %>
	<% open('image.jpg', 'wb') do |file| %>
  		<% file << open(p.images.standard_resolution.url).read %>
	<% end %>
<% end %>

<% @tags.each do |tags| %>
    <%#= image_tag tags.images.standard_resolution.url %>
<% end %>

